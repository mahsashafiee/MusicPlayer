<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->

    <style name="Theme.MusicPlayer" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>

    <style name="Theme.MusicPlayer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Theme.MusicPlayer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MusicPlayer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.MusicPlayer.SeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="cs_circle_color">@color/colorOfLine</item>
        <item name="cs_circle_progress_color">@android:color/primary_text_dark_nodisable</item>
        <item name="cs_circle_stroke_width">4dp</item>
        <item name="cs_pointer_color">@android:color/primary_text_dark_nodisable</item>
        <item name="cs_pointer_stroke_width">14dp</item>
    </style>

    <style name="Widget.MusicPlayer.SeekBar.Small" parent="Widget.AppCompat.SeekBar">
        <item name="cs_circle_color">@color/colorOfLine</item>
        <item name="cs_circle_progress_color">@android:color/primary_text_dark_nodisable</item>
        <item name="cs_circle_stroke_width">1dp</item>
        <item name="cs_pointer_color">@android:color/primary_text_dark_nodisable</item>
        <item name="cs_pointer_stroke_width">4dp</item>
    </style>

    <style name="Widget.MusicPlayer.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/Widget.MusicPlayer.TextView.Medium</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="tabGravity">fill</item>
        <item name="tabTextColor">@color/colorTabUnselected</item>
        <item name="tabIndicatorColor">@android:color/transparent</item>
        <item name="tabRippleColor">@android:color/transparent</item>
        <item name="tabMode">fixed</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
    </style>

    <style name="Widget.MusicPlayer.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/Theme.MusicPlayer</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/TextAppearance.MusicPlayer.Toolbar</item>
    </style>

    <style name="Widget.MusicPlayer.TextView.Medium" parent="Widget.MaterialComponents.TextView">
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">15.5sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="Widget.MusicPlayer.TextView.Small" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Widget.MusicPlayer.TextView.Small.Marquee" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small.Inverse</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="TextAppearance.MusicPlayer.Toolbar" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>
