<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/all_song_banner" android:gravity="center"/>
    <item android:id="@+id/gradient_vertical">
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:startColor="#99000000"
                android:endColor="#99000000"
                android:centerColor="#0000"/>
        </shape>
    </item>
    <item android:id="@+id/gradient_horizontal">
        <shape android:shape="rectangle">
            <gradient android:startColor="#99000000"
                android:endColor="#99000000"
                android:centerColor="#0000"/>
        </shape>
    </item>
</layer-list>