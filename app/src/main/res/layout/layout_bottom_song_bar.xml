<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/song_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:max="100"
        android:maxHeight="2dp"
        android:minHeight="2dp"
        android:padding="0dp"
        android:progress="0"
        android:progressDrawable="@drawable/progress_bar_drawable"
        android:secondaryProgress="0"
        android:thumb="@drawable/progress_thumb"
        android:thumbOffset="0dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/song_bar_artwork"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/seekBar"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="6dp"
        android:background="@android:color/transparent"
        android:elevation="8dp"
        app:civ_border_color="@color/colorOfLine"
        app:civ_border_width="1px"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/song_bar_title"
        style="@style/Widget.MusicPlayer.TextView.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/song_bar_artwork"
        android:layout_marginTop="3dp"
        android:layout_toStartOf="@id/songBar_skip_previous"
        android:layout_toLeftOf="@id/songBar_skip_previous"
        android:layout_toEndOf="@id/song_bar_artwork"
        android:layout_toRightOf="@id/song_bar_artwork"
        android:paddingStart="2dp"
        android:paddingLeft="2dp"
        android:paddingTop="2dp"
        android:paddingEnd="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="2dp"
        tools:text="@tools:sample/full_names" />

    <TextView
        android:id="@+id/song_bar_artist"
        style="@style/Widget.MusicPlayer.TextView.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/song_bar_title"
        android:layout_marginBottom="4dp"
        android:layout_toStartOf="@id/songBar_skip_previous"
        android:layout_toLeftOf="@id/songBar_skip_previous"
        android:layout_toEndOf="@id/song_bar_artwork"
        android:layout_toRightOf="@id/song_bar_artwork"
        android:paddingStart="2dp"
        android:paddingLeft="2dp"
        android:paddingEnd="16dp"
        android:paddingRight="16dp"
        tools:text="@tools:sample/first_names" />

    <ImageView
        android:id="@+id/songBar_skip_next"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@id/song_bar_artwork"
        android:layout_alignBottom="@id/song_bar_artwork"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/activity_spacing"
        android:layout_marginRight="@dimen/activity_spacing"
        android:layout_marginBottom="8dp"
        android:background="@drawable/circular_button"
        android:foregroundGravity="center_vertical"
        android:padding="11dp"
        app:srcCompat="@drawable/ic_skip_next" />

    <ImageView
        android:id="@+id/play_pause"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignTop="@id/song_bar_artwork"
        android:layout_alignBottom="@id/song_bar_artwork"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="5dp"
        android:layout_toStartOf="@id/songBar_skip_next"
        android:layout_toLeftOf="@id/songBar_skip_next"
        android:background="@drawable/circular_button"
        android:foregroundGravity="center_vertical"
        android:padding="8dp"
        app:srcCompat="@drawable/ic_pause" />

    <ImageView
        android:id="@+id/songBar_skip_previous"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@id/song_bar_artwork"
        android:layout_alignBottom="@id/song_bar_artwork"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="8dp"
        android:layout_toStartOf="@id/play_pause"
        android:layout_toLeftOf="@id/play_pause"
        android:background="@drawable/circular_button"
        android:foregroundGravity="center_vertical"
        android:padding="11dp"
        app:srcCompat="@drawable/ic_skip_previous" />

</RelativeLayout>
