<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    tools:context=".controller.CategoryFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.motion.widget.MotionLayout
        android:layout_width="match_parent"
        app:layoutDescription="@xml/category_scene"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            app:menu="@menu/mp_toolbar_menu"
            android:layout_height="?android:attr/actionBarSize" />

        <ImageView
            android:id="@+id/toolBar_extended_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/category_banner"
            android:adjustViewBounds="true"
            android:fitsSystemWindows="true"
            android:scaleType="centerCrop" />

        <RelativeLayout
            app:layout_constraintTop_toBottomOf="@id/toolBar_extended_image"
            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/mi_category_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/mi_category_background"
                android:padding="12dp"
                android:paddingStart="40dp"
                android:text="@string/category_album"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingLeft="48dp" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/album_recycler_view"
                android:layout_width="match_parent"
                android:background="@color/textColorPrimary"
                android:layout_below="@id/mi_category_header"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp"
                tools:listitem="@layout/mi_album_item" />

            <TextView
                android:id="@+id/mi_category_artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/album_recycler_view"
                android:paddingStart="40dp"
                android:paddingTop="8dp"
                android:paddingEnd="40dp"
                android:background="@color/textColorPrimary"
                android:paddingBottom="8dp"
                android:text="@string/category_artist"
                android:textSize="20sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/artist_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/textColorPrimary"
                android:layout_below="@id/mi_category_artist"
                android:orientation="horizontal"
                android:padding="4dp"
                tools:listitem="@layout/mi_artist_item" />
        </RelativeLayout>

    </androidx.constraintlayout.motion.widget.MotionLayout>


</ScrollView>