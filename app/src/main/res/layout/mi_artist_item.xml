<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@android:color/transparent"
    android:padding="4dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_artist_art"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:elevation="12dp"
        app:cardCornerRadius="52dp">

        <com.example.musicplayer.Utils.SquareImage
            android:id="@+id/item_artist_art"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/artist_placeholder"
            android:outlineProvider="bounds"
            tools:src="@tools:sample/avatars" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_song_artist"
        style="@style/Widget.MusicPlayer.TextView.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_artist_art"
        android:layout_alignStart="@id/card_artist_art"
        android:layout_alignLeft="@id/card_artist_art"
        android:layout_alignEnd="@id/card_artist_art"
        android:layout_alignRight="@id/card_artist_art"
        android:gravity="center"
        android:textSize="16sp"
        android:padding="6dp"
        tools:text="@tools:sample/lorem" />


</RelativeLayout>